<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@color/white">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/course"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@id/name"
            android:hint="Name of alumne "
            android:drawableLeft="@drawable/ic_form_user"
            android:drawablePadding="15dp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/sizeText"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:hint="Cellphone"
            android:drawableLeft="@drawable/ic_form_phone"
            android:drawablePadding="15dp"
            android:id="@id/phone"
            android:textColorHint="@color/black"
            android:textSize="@dimen/sizeText"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_form_email"
            android:drawablePadding="15dp"
            android:id="@id/email"
            android:textColorHint="@color/black"
            android:textSize="@dimen/sizeText"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="susbcription"
            android:id="@id/save"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_selected"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />
    </LinearLayout>


</LinearLayout>